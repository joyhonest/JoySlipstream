<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cacaca"
    tools:context=".PlayActivity">

    <ImageView
        android:id="@+id/DispImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#cacaca"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.joyhonest.joyslipstream.MyControl
        android:id="@+id/myController"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >
    </com.joyhonest.joyslipstream.MyControl>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#bda284"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_controller"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/control_camera_orientation"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_adjustment"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintDimensionRatio="2:1"

             />

        <Button
            android:id="@+id/btn_adjustment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/brush_jh"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_controller"
            app:layout_constraintRight_toLeftOf="@+id/btn_speed_switch"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintDimensionRatio="1.5:1"
            />

        <Button
            android:id="@+id/btn_speed_switch"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@mipmap/speed_jh"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_adjustment"
            app:layout_constraintRight_toLeftOf="@+id/btn_gallery"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintDimensionRatio="1.5:1" />

        <Button
            android:id="@+id/btn_gallery"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/gallery_jh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_speed_switch"
            app:layout_constraintRight_toLeftOf="@+id/btn_motion_sensitive"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintDimensionRatio="1.5:1"
            />

        <Button
            android:id="@+id/btn_motion_sensitive"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@mipmap/control_screen_orientation_jh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_gallery"
            app:layout_constraintRight_toLeftOf="@+id/btn_path"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintDimensionRatio="1.5:1"
            />

        <Button
            android:id="@+id/btn_path"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/hide_rocker_jh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_motion_sensitive"
            app:layout_constraintRight_toLeftOf="@+id/btn_vr"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintDimensionRatio="1.5:1" />

        <Button
            android:id="@+id/btn_vr"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/vr_jh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_path"
            app:layout_constraintRight_toLeftOf="@+id/btn_back_main"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintDimensionRatio="1.5:1" />

        <Button
            android:id="@+id/btn_back_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/back_jh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_vr"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintDimensionRatio="1.5:1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/take_photo_jh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.58"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintWidth_percent="0.078" />

        <ImageView
            android:id="@+id/img_wifi"
            android:layout_width="0dp"

            android:layout_height="0dp"
            android:background="@mipmap/wifi_jh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toEndOf="@+id/btn_take_photo"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.277"
            app:layout_constraintWidth_percent="0.05" />

        <Button
            android:id="@+id/btn_engine_switch"
            android:layout_width="0dp"

            android:layout_height="0dp"
            android:background="@mipmap/switch_jh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintWidth_percent="0.08" />

        <Button
            android:id="@+id/camera_1"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:background="@mipmap/camera_1_jh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.42"
            app:layout_constraintStart_toEndOf="@+id/btn_engine_switch"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintWidth_percent="0.052" />

        <Button
            android:id="@+id/camera_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:visibility="invisible"
            android:background="@mipmap/camera_2_jh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.42"
            app:layout_constraintStart_toEndOf="@+id/camera_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintWidth_percent="0.052" />

        <Button
            android:id="@+id/camera_3"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@mipmap/camera_3_jh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.42"
            app:layout_constraintStart_toEndOf="@+id/camera_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintWidth_percent="0.052" />

        <Button
            android:id="@+id/btn_take_video"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/take_video_jh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/camera_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintWidth_percent="0.08" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/RecordTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:gravity="center_horizontal"
        android:text="00:00"
        android:textColor="#FFFF0000"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_hide_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:background="@mipmap/control_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/lay_toolbar_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.053" />

    <Button
        android:id="@+id/btn_auto_launch_land"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_hide_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.16"
        app:layout_constraintStart_toStartOf="parent"

        android:background="@mipmap/control_arrows_jh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintWidth_percent="0.06" />


</androidx.constraintlayout.widget.ConstraintLayout>